<%- include('./partials/header.ejs') %>

  <main class="post-main">
    <header>
      <h1><%= post.title %></h1>
      <h2><%= post.subtitle %></h2>
      <div class="author-date">
        <span class="author"><%= post.author %></span>
        <span class="date"><%= new Date(post.publishedAt).toLocaleDateString('en-US', { year: 'numeric' , month: 'long' ,
          day: 'numeric' }) %></span>
      </div>
    </header>
    <article>
      <p><%= post.content %></p>
    </article>
    <div class="interactions">
      <button class="btn" aria-label="Clap for this post">👏 Clap</button>
      <button class="btn" aria-label="Comment on this post">
        💬 Comment
      </button>
      <button class="btn" aria-label="Share this post">🔄 Share</button>
      <button class="btn" aria-label="Save this post">💾 Save</button>
    </div>
  </main>
  <%- include('./partials/footer.ejs') %>